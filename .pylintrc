[BASIC]
python = 3.12

[BASIC]
py3k = True

[pycodestyle]
max-line-length = 100

[MASTER]

ignore = __test__/*
# Specify the Python version for which Pylint should be applied
; python=3.10

[MESSAGES CONTROL]
# Disable specific warnings or errors
disable=
    missing-docstring,
    invalid-name,
    unused-import


[FORMAT]
# Set the maximum line length
max-line-length=120


[TYPECHECK]
# Set the maximum number of arguments for function / method
; max-args=8
# Set the maximum number of locals for function / method body
; max-locals=15
# Set the maximum number of return / yield for function / method body
; max-returns=6
# Set the maximum number of branch for function / method body
; max-branches=12
# Set the maximum number of statements in function / method body
; max-statements=50
# Set the maximum number of parents for a class (see R0901).
; max-parents=3

[REPORTS]

# Set the output format. Available formats are text, parseable, colorized, msvs (visual studio) and html
output-format=json


[VARIABLES]
# Enables checking for unused variables / arguments
init-import=no

; [MESSAGES CONTROL]

[BASIC]
min-public-methods=50

